<body>
    <!-- Botão de Scroll para o topo -->
    <a href="#home" class="scroll-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <section>
        <div class="box-container">
            <!-- Imagem GIF (Fundo) -->
            <div class="image">
                <img src="~/images/Logo/LogoName.gif" alt="Home-Image">
            </div>

            <div class="content">
                <div class="filter-container">
                    <h3>Filtrar Relatório</h3>

                    <div class="filter-group">
                        <label for="campoFiltro1">Filtro 1:</label>
                        <input type="text" id="campoFiltro1" placeholder="Digite o filtro" class="filter-input">
                    </div>

                    <div class="filter-group">
                        <label for="campoFiltro2">Filtro 2:</label>
                        <input type="text" id="campoFiltro2" placeholder="Digite o filtro" class="filter-input">
                    </div>

                    <div class="filter-group">
                        <label for="campoFiltro3">Filtro 3:</label>
                        <input type="text" id="campoFiltro3" placeholder="Digite o filtro" class="filter-input">
                    </div>

                    <div class="filter-group">
                        <label for="colunaFiltro1">Escolha a coluna 1:</label>
                        <select id="colunaFiltro1" class="filter-select">
                            <option value="coluna1">Coluna 1</option>
                            <option value="coluna2">Coluna 2</option>
                            <option value="coluna3">Coluna 3</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="colunaFiltro2">Escolha a coluna 2:</label>
                        <select id="colunaFiltro2" class="filter-select">
                            <option value="coluna1">Coluna 1</option>
                            <option value="coluna2">Coluna 2</option>
                            <option value="coluna3">Coluna 3</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="colunaFiltro3">Escolha a coluna 3:</label>
                        <select id="colunaFiltro3" class="filter-select">
                            <option value="coluna1">Coluna 1</option>
                            <option value="coluna2">Coluna 2</option>
                            <option value="coluna3">Coluna 3</option>
                        </select>
                    </div>

                    <button id="pesquisarBtn" class="btn">Pesquisar</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Tabela jTable -->
    <section class="tabela-relatorio">
        <div id="tabelaContainer"></div>
    </section>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/vendors/typed/typed.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jtable@2.5.0/dist/jtable.min.js"></script>

    <!-- Estilo CSS -->
    <style>
        /* Contêiner da imagem (GIF) */
        .image {
            position: absolute; /* Faz a imagem ficar atrás */
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1; /* Garante que a imagem fique atrás do conteúdo */
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .image img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ajusta a imagem para cobrir toda a área do contêiner */
            }

        .box-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
        }

        .content {
            width: 50%;
            margin-top: 100px;
        }

        .filter-container {
            max-width: 1000px; /* Aumentei o tamanho máximo */
            margin: 0 auto;
            background-color: rgba(219, 34, 172, 0.85); /* Cor com transparência para ver o GIF */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 1; /* Garante que o filtro fique acima da imagem */
        }

            .filter-container h3 {
                font-size: 28px;
                color: #ffffff; /* Cor branca para melhor contraste com o fundo */
                margin-bottom: 25px;
                text-align: center; /* Centraliza o título */
            }

        .filter-group {
            margin-bottom: 15px;
        }

            .filter-group label {
                display: block;
                font-size: 16px;
                color: #ffffff; /* Cor branca para o texto */
                margin-bottom: 5px;
            }

        .filter-input,
        .filter-select {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #fff;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

            .filter-input:focus,
            .filter-select:focus {
                border-color: #4CAF50;
                outline: none;
            }

        .btn {
            padding: 12px 25px;
            background-color: #db22ac;
            color: #ffffff;
            border: 2px solid #ffffff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #ffffff;
                color: #db22ac;
            }

        #tabelaContainer {
            margin-top: 30px;
            background-color: #db22ac;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</body>
