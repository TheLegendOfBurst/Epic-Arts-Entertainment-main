    @{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <!-- Libraries -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/login.css">

    <title>Login Page</title>
</head>

<body>

    <!-- Overlay e Loader -->
    <div id="overlay" style="display: none;"></div>
    <div id="loader" style="display: none;">
        <i class="fa fa-spinner fa-spin"></i> Carregando...
    </div>

    <div id="custom_container" class="custom_container">
        <div class="tab-content">
            <h1 class="custom_logo">
                <a href="/Home/Index">
                    <img src="~/images/Logo/Logo.png" alt="Távila Victória Logo" style="width: 150px; height:150px">
                </a>
            </h1>

            <!-- Pills navs -->
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tab-register" href="/Usuario/Cadastro" role="tab" aria-controls="pills-register" aria-selected="false">Cadastrar</a>
                </li>
            </ul>
            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <form>
                        <div class="text-center mb-3">
                            <a href="https://www.facebook.com">
                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-facebook-f"></i>
                                </button>
                            </a>
                            <a href="https://www.google.com">
                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-google"></i>
                                </button>
                            </a>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="loginEmail" class="form-control" placeholder="Digite seu Email" required />
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input id="loginPassword" type="password" class="form-control" placeholder="Digite a senha" required />
                        </div>

                        <!-- 2 column grid layout -->
                        <div class="row mb-4">
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Additional content can be added here -->
                            </div>
                            <div class="col-md-6 d-flex justify-content-center">
                                <a href="#!">Esqueci a senha</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <div style="display: flex; justify-content: space-between;">
                            <button type="button" id="send-button" class="btn btn-primary btn-block" style="flex: 1; margin-left: 5px;" onclick="ConsultaLogin()">Entrar</button>
                            <button type="button" id="send-button2" class="btn btn-primary btn-block" style="flex: 1; margin-left: 5px;" onclick="window.location.href = '/Home/Index';">Voltar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Adiciona o SweetAlert2 -->

<script>
    $(document).ready(function () {
        // Função para alternar a visibilidade da senha
        $('#show-hide-password').click(function () {
            var senhaInput = $('#loginPassword');
            var tipoInput = senhaInput.attr('type');

            // Alternar entre o tipo de input password e text
            if (tipoInput === 'password') {
                senhaInput.attr('type', 'text');
                $('#show-hide-password i').removeClass('fa-eye-slash').addClass('fa-eye');
            } else {
                senhaInput.attr('type', 'password');
                $('#show-hide-password i').removeClass('fa-eye').addClass('fa-eye-slash');
            }
        });

        // Detecta quando o 'Enter' é pressionado no campo de email ou senha
        $('#loginEmail, #loginPassword').on('keypress', function (e) {
            if (e.which === 13) {  // Verifica se a tecla pressionada é 'Enter' (código 13)
                e.preventDefault();  // Previne a ação padrão (para evitar que o formulário seja enviado)
                ConsultaLogin();  // Chama a função de login
            }
        });
    });

    function ConsultaLogin() {
        var email = $("#loginEmail").val();
        var senha = $("#loginPassword").val();

         // Show the overlay and loader
         $("#overlay").show();  // Exibir o overlay escuro
         $("#loader").show();   // Exibir o loader

        $.ajax({
            type: "POST",
            url: "/Usuario/VerificarLogin",
            data: { Email: email, Senha: senha },
            dataType: "json",
            success: function (result) {
                // Hide the overlay and loader after the response
                $("#overlay").hide();
                $("#loader").hide();

                if (result.success) {
                    Swal.fire({
                        position: "top-end",
                        icon: 'success',
                        title: 'Sucesso',
                        text: 'Login feito com sucesso!',
                        confirmButtonText: 'OK'
                    }).then(function () {
                        window.location.href = '/Home/Index'; // Redireciona após o clique no botão OK
                    });
                } else {
                    Swal.fire({
                        position: "top-end",
                        icon: 'error',
                        title: 'Erro',
                        text: result.message,
                        confirmButtonText: 'OK'
                    });
                }
            },
            error: function (error) {
                console.error(error);
                // Lógica para lidar com erros de chamada Ajax
            }
        });
    }

    </script>
</body>

</html>
