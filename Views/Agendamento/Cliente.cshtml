                                        <td style="color: #fc0fc0; border: 1px solid #fc0fc0;">@agendamento.UsuarioEmail</td> <!-- Email do usuário -->
                                        <td style="color: #fc0fc0; border: 1px solid #fc0fc0;">@agendamento.UsuarioTelefone</td> <!-- Telefone do usuário -->
                                        <td style="color: #fc0fc0; border: 1px solid #fc0fc0;">@agendamento.DataAgendamento</td> <!-- Data do agendamento -->
                                        <td style="color: #fc0fc0; border: 1px solid #fc0fc0;">@agendamento.Horario</td> <!-- Hora do agendamento -->
                                        <td style="color: #fc0fc0; border: 1px solid #fc0fc0;">@agendamento.ServicoNome</td> <!-- Nome do serviço -->
                                        <td style="color: #fc0fc0; border: 1px solid #fc0fc0;">@agendamento.ServicoValor</td> <!-- Valor do serviço -->

                                        <td class="text-center" style="color: #ac0404; border: 1px solid #fc0fc0;">
                                            <button class="btn btn-editar"
                                                    onclick="definirEdt(@agendamento.IdAgendamento, '@agendamento.UsuarioNome', '@agendamento.UsuarioEmail', '@agendamento.UsuarioTelefone', '@agendamento.DataAgendamento', '@agendamento.Horario', '@agendamento.ServicoNome', '@agendamento.ServicoValor')"
                                                    data-bs-toggle="modal" data-bs-target="#AlterarAgendamento">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </td>
                                        <td class="text-center" style="color: #ac0404; border: 1px solid #fc0fc0;">
                                            <button class="btn btn-excluir"
                                                    onclick="definirExc(@agendamento.IdAgendamento, '@agendamento.UsuarioNome', '@agendamento.UsuarioEmail', '@agendamento.UsuarioTelefone', '@agendamento.DataAgendamento', '@agendamento.Horario', '@agendamento.ServicoNome', '@agendamento.ServicoValor')"
