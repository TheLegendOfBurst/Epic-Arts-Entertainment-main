@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            text-align: center;
            background-color: #000000;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-around;
            align-items: center;
            margin-bottom: 20px;
        }

        .box-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .box {
            width: 250px;
            height: 80px;
            background-color: #fc0fc0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            font-weight: bold;
            color: #000000;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            margin-bottom: 5px;
        }

        .small-box {
            width: 200px;
            height: 40px;
            background-color: #ffcc80;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: bold;
            color: #444;
            border-radius: 5px;
            box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
        }

        select {
            padding: 8px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        #chart-container {
            width: 80%;
            margin: auto;
            height: 400px;
        }
    </style>
</head>
<body>
    <!-- Cabeçalho com 3 divs grandes e o select -->
    <div class="dashboard-header">
        <div class="box-container">
            <div class="box">Total de usuários cadastrados em 2025:</div>
            <div class="small-box">+15% em relação a 2024</div>
        </div>
        <div class="box-container">
            <div class="box">Total de agendamentos feitos em 2025:</div>
            <div class="small-box">+20% comparado ao mês passado</div>
        </div>
        <div class="box-container">
            <div class="box">Lucro total em 2025:</div>
            <div class="small-box">R$ 1.500.000,00</div>
        </div>

        <select id="anoSelect">
            <option value="2025">2025</option>
            <option value="2024">2024</option>
            <option value="2023">2023</option>
        </select>
    </div>

    <!-- Container do Gráfico -->
    <div id="chart-container"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Highcharts.chart('chart-container', {
                chart: { type: 'line' },
                title: { text: 'Gráfico de Exemplo' },
                xAxis: { categories: ['Jan', 'Fev', 'Mar', 'Abr'] },
                series: [{
                    name: 'Vendas',
                    data: @Html.Raw(ViewBag.ChartData)
                }]
            });
        });
    </script>

</body>
</html>
