<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title>Epic Arts Entertainment</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
        <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">
        <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/usuario_index.css">
        <link rel="stylesheet" href="~/css/submenu.css">
        <link rel="stylesheet" href="~/css/submenu2.css">
        <link rel="icon" href="/images/Logo/Logo.png" sizes="128x128" type="image/png">


        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    </head>
<body>

    <!-------------------- Header Area (Start) -------------------->
    <header class="header">
        @{
            // Verifica se o usuário está autenticado e recupera os dados de ambiente
            bool usuarioAutenticado = !string.IsNullOrEmpty(Environment.GetEnvironmentVariable("USUARIO_ID"));
            string usuarioNome = Environment.GetEnvironmentVariable("USUARIO_NOME");
            string tipoUsuario = Environment.GetEnvironmentVariable("USUARIO_TIPO");
        }
        <!-- Logo --> 
        
            <!-- Favicon -->
            <link rel="icon" href="/images/Logo/Logo.png" type="image/png">
        


        <!-- Logo End -->

        <!-- Navbar -->
        <nav class="navbar" style="display: flex; justify-content: flex-end; align-items: center; flex-wrap: wrap; padding-right: 100px; margin-top: -5px;">
    <span style="display: flex; align-items: center; margin-right: 9px;">
        <i class="fas fa-home fa-lg" aria-hidden="true" style="color: #db22ac;"></i>
        <a href="/Home/Index" style="margin-left: 10px;">Inicio</a>
    </span>


    @if (usuarioAutenticado)
    {
        @if (tipoUsuario == "1")
        {
            <div class="dropdown">
                <span style="display: flex; align-items: center; margin-right: 20px;">
                    <i class="fa fa-user" aria-hidden="true" style="color: #db22ac;"></i>
                    <a href="#" style="margin-left: 10px;">@usuarioNome</a>
                    <i class="fa fa-chevron-down" aria-hidden="true" style="color: #db22ac; margin-left: 5px;"></i>
                </span>
                <div class="dropdown-content">
                    <a href="/Usuario/Index">
                        <i class="fa fa-users" aria-hidden="true" style="margin-right: 20px; color: #db22ac;"></i>
                        Usuarios
                    </a>
                    <a href="/Agendamento/Admin">
                        <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 20px; color: #db22ac;"></i>
                        Agendamento Admin
                    </a>                           

                    <a href="/Servico/Index">
                        <i class="fa fa-file-archive" aria-hidden="true" style="margin-right: 20px; color: #db22ac;"></i>
                        Serviços
                    </a>
                    <a href="#logout">
                        <i class="fa fa-file-archive" aria-hidden="true" style="margin-right: 20px; color: #db22ac;"></i>
                        Relatório
                    </a>
                    <a href="javascript:void(0);" onclick="logout()" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                        <i class="fa fa-sign-out-alt" aria-hidden="true" style="margin-right: 8px;"></i> Sair
                    </a>
                </div>
            </div>

        }
        else {
            <div class="dropdown">
                <span style="display: flex; align-items: center; margin-right: 20px;">
                    <i class="fa fa-user" aria-hidden="true" style="color: #db22ac;"></i>
                    <a href="#" style="margin-left: 10px;">@usuarioNome</a>
                    <i class="fa fa-chevron-down" aria-hidden="true" style="color: #db22ac; margin-left: 5px;"></i>
                </span>
                <div class="dropdown-content">
                    <a href="/Agendamento/Cliente">
                        <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 20px; color: #db22ac;"></i>
                        Agendamento User
                    </a>
                    <a href="/Agendamento/Cadastro">
                        <i class="fa fa-file" aria-hidden="true" style="margin-right: 20px; color: #db22ac;"></i>
                        Cadastro Agendamento
                    </a>
                    <a href="javascript:void(0);" onclick="logout()" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                        <i class="fa fa-sign-out-alt" aria-hidden="true" style="margin-right: 8px;"></i> Sair
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Menu de Login (Quando o usuário não está autenticado) -->
        <div class="dropdown" style="position: relative; display: inline-block;">
            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fa fa-user" aria-hidden="true" style="color: #db22ac;"></i>
                <a href="/Usuario/Login" style="margin-left: 10px;">Login</a>
            </span>
        </div>
    }

</nav>

    </header>
    <!-------------------- Header Area (End) -------------------->

    <script>
        function logout() {
            // Envia a requisição AJAX para o servidor
            $.ajax({
                url: '/Usuario/Logout', // URL do método Logout no controller
                type: 'POST', // Tipo de requisição (POST)
                success: function (response) {
                    // Se a requisição for bem-sucedida
                    if (response.success) {
                        // Redireciona para a página de login ou outra página conforme desejado
                        window.location.href = '/Home/Index';
                    } else {
                        // Se houver uma mensagem de erro, exibe
                        alert('Erro ao realizar o logout: ' + (response.message || 'Erro desconhecido'));
                    }
                },
                error: function (xhr, status, error) {
                    // Se ocorrer algum erro na requisição AJAX
                    alert('Erro ao processar a solicitação de logout. Detalhes: ' + error);
                }
            });
        }
    </script>

    <!-------------------- Header Area (End) -------------------->



    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <!-------------------- Footer Area (Start) -------------------->
    
    <!-------------------- Footer Area (End) -------------------->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>