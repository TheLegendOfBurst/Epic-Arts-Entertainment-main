<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title>Epic Arts Entertainment</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
        <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">
        <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/usuario_index.css">
        <link rel="stylesheet" href="~/css/submenu.css">
        <link rel="stylesheet" href="~/css/submenu2.css">


        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    </head>
<body>

    <!-------------------- Header Area (Start) -------------------->

    <nav id="NavBar-2">
        <span style="transform: translateX(20px);">
            <i class="fas fa-home fa-lg" aria-hidden="true" style="color: #fc0fc0;"></i>
            <a href="/Home/Index" style="margin-left: 10px; text-decoration: none;">Inicio</a>
        </span>

        <div id="SubMenu-2" style="transform: translateX(18px); position: relative;">
            <span style="display: flex; align-items: center;">
                <i class="fa fa-user" aria-hidden="true" style="color: #fc0fc0;"></i>
                <a id="loginButton" href="/Usuario/Login" style="margin-left: 10px; text-decoration: none;">Login</a>
                <a href="/Home/Index" style="margin-left: 15px; text-decoration: none;">
                    <i class="fa fa-arrow-left" aria-hidden="true" style="margin-right: 5px;"></i> <!-- Ícone de seta para a esquerda -->
                    Voltar
                </a>
            </span>
            <div id="SubMenu-2-content">
                <a href="/Usuario/Index">
                    <i class="fa fa-users" aria-hidden="true" style="margin-right: 20px;"></i>
                    Usuarios
                </a>
                <a href="/Agendamento/Admin">
                    <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 20px;"></i>
                    Agendamento Admin
                </a>
                <a href="/Agendamento/Cliente">
                    <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 20px;"></i>
                    Agendamento User
                </a>
                <a href="/Agendamento/Cadastro">
                    <i class="fa fa-address-book" aria-hidden="true" style="margin-right: 20px;"></i>
                    Cadastro Agendamento
                </a>
                <a href="/Servico/Index">
                    <i class="fa fa-file-archive" aria-hidden="true" style="margin-right: 20px;"></i>
                    Gerenciamento de Servico
                </a>
                <a href="#logout">
                    <i class="fa fa-file-archive" aria-hidden="true" style="margin-right: 20px;"></i>
                    Relatório
                </a>
            </div>
        </div>
    </nav>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loginButton = document.getElementById('loginButton');
            const submenu = document.getElementById('SubMenu-2-content');

            // Função para mostrar o submenu
            function showSubMenu() {
                submenu.style.display = 'block';
            }

            // Função para ocultar o submenu
            function hideSubMenu() {
                submenu.style.display = 'none';
            }

            // Eventos para o botão Login
            loginButton.addEventListener('mouseenter', showSubMenu);
            loginButton.addEventListener('mouseleave', hideSubMenu);

            // Eventos para o submenu
            submenu.addEventListener('mouseenter', showSubMenu);
            submenu.addEventListener('mouseleave', hideSubMenu);
        });
    </script>

    <!-------------------- Header Area (End) -------------------->



    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <!-------------------- Footer Area (Start) -------------------->
    
    <!-------------------- Footer Area (End) -------------------->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>